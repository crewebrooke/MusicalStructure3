<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/blues"
            style="@style/CategoryStyle"
            android:background="@drawable/rsz_bluesimg"
            android:text="@string/blues_playlist" />

        <TextView
            android:id="@+id/pop"
            style="@style/CategoryStyle"
            android:background="@drawable/rsz_popimg"
            android:text="@string/pop_playlist" />

        <TextView
            android:id="@+id/rock"
            style="@style/CategoryStyle"
            android:background="@drawable/rockimg"
            android:text="@string/rock_playlist" />

    </LinearLayout>

</ScrollView>

